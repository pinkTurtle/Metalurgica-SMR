.content-gallery
  width: 600px
  height: 300px
  margin: 0px auto !important
  div
    transition: left 1s
    div
      max-width: 600px
      height: 300px
      float: left
      a
        width: 100%
        height: 100%
        img
          width: auto
          height: 100%

.album-lightbox
  height: 200px
  width: 250px
  &.ngg-albumoverview
    width: 250px
  &.my-slider
    margin: 0px
    &.ngg-albumoverview
      position: absolute
      top: 170px
      left: 350px
  div
    height: 100%
    transition: left 1s
    .smr-album
      width: 250px
      height: 200px
      .ngg-album-link
        position: relative
        a
          width: 100%
          height: 100%
          overflow: hidden
          img
            width: 100%
            height: auto

          span
            position: absolute
            bottom: 0px
            right: 0px
            margin: 5px 7px
            font-weight: bold
            text-shadow: -1px 1px 7px white
            color: black

