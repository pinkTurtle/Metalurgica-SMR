header
  .wrapper
    background: rgba(1, 1, 1, 0.5)
    padding-top: 30px
    margin-top: 50px
    .container
      background: rgba(255, 255, 255, 0.9)
      padding: 0 
      margin:0
      border-top: 10px solid #088A4B
      h2 
        padding-right: 10px
        padding-left: 10%
        margin: 0
        float: left
      .els-centrales
        float:left
        h3
          color: #0B243B
          font-family: $titulos-font
          font-size: 25px
          font-weight: 700
          margin: 0
          padding-top: 35px
          letter-spacing: -1px
        h4
          color: #666
          margin: -7px 0 0 0
          font-family: $titulos-font
          font-size: 25px
          line-height: 40px
          letter-spacing: -1px
          font-weight: 300
         
  nav 
    float: right
    padding-right: 10%
    padding-top: 25px
    ul
      list-style: none
      color: $gris-fuente
      margin: 0
      padding: 0
      li
        color: $gris-fuente
        font-family: $titulos-font
        font-weight: 300
        font-size: 15px
        list-style: none
        text-align: left
        text-decoration:none
        &:before
          content: " / "
          color: $verde-hover
        a
          text-decoration:none
          color: $gris-fuente
          -webkit-transition: all 200ms ease-out
          &:hover
            text-decoration:none
            color: $verde-hover
            opacity: 0.5
  .clear 
    clear: both