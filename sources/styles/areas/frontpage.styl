.my-slider
  width: 100%;
  height: 330px;

.my-slider ul
  transition: left 1s;
  li
    position: relative
    width: 890px;
    text-align: center;
    background-color: white;
    height: 330px;
    &.currentslide
      div.desc
        p
          color: $font_white
        //background-color: transparent
      img
      -webkit-filter: none
      -webkit-filter: none
      -moz-filter: none
      filter: none
      filter: none
      filter: none
    img
      width: 100%;
      -webkit-filter: grayscale(1)
      -webkit-filter: grayscale(100%)
      -moz-filter: grayscale(100%)
      filter: gray
      filter: grayscale(100%)
      filter: url(desaturate.svg#greyscale)
    div.desc
      z-index: 10
      p
        transition: color 1s
        padding-top: 180px
        color: $font_grey
        font-size: 35px
        text-transform: uppercase
        width: 320px
        float: right
        display: inline-block
        line-height: 30px
        font-weight: bold
        font-family: 'Monda', sans-serif;
        text-align: right
        text-shadow: 1px 1px 10px rgba(0, 0, 0, 0.5);
        span
          font-size: 12px
      height: 100%
      width: 100%
      padding: 40px
      position: absolute
