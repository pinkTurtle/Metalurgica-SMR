#main
  #home-primary
    #home-content
      .my-slider
        background-color: #eee;
        width: 100%;
        height: 330px;
        margin: 0px auto;
        &:after,
        &:before
          content: " "
          position: absolute
          top: 0px
          height: 100%
          width: 50px
          background-color: rgba(0,0,0,0.5)
          z-index: 100
        &:before
          left: 0px
        &:after
          right: 0px

      .my-slider > ul
        transition: left 1s;

      .my-slider > ul > li
        width: 890px;
        text-align: center;
        background-color: white;
        height: 330px;

      .my-slider > ul > li img
        width: 100%;
        display: block;
        margin: 0px auto;

