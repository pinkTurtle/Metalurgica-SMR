.my-slider
  width: 100%;
  height: 330px;

.my-slider ul
  transition: left 1s;
  li
    position: relative
    width: 890px;
    text-align: center;
    background-color: white;
    height: 330px;
    &.currentslide
      div.desc
        p
          color: $font_white
        background-color: transparent
    img
      width: 100%;
    div.desc
      p
        transition: color 1s
        padding-top: 180px
        color: $font_grey
        font-size: 35px
        text-transform: uppercase
        width: 320px
        float: right
        display: inline-block
        line-height: 30px
        font-weight: bold
        font-family: 'Monda', sans-serif;
        text-align: right
        span
          font-size: 12px
      transition: background-color 1s
      height: 100%
      width: 100%
      padding: 40px
      position: absolute
      background-color: rgba(0,0,0,0.6)

