div#main
  div#primary
    div#content
      article
        div.subcontent
          position: relative
          width: 80%;
          margin: -55px auto 0px
          padding: 0;
          background: rgba(255, 255, 255, 0.8);
          h1
            text-transform: uppercase
            background: rgba(1, 1, 1, 0.7);
            color: #fff;
            font-family: 'Monda', sans-serif;
            font-size: 20px; 
            font-weight: 300;
            margin: 0;
            height: 55px
            line-height: 55px
            padding-left: 50px
            &:before
              content: "/ "

          p
            font-family: 'Oxygen', sans-serif;
            color: #333;
            padding: 30px 50px;
            margin: 0;
            text-align: justify;
            font-size: 15px;
            line-height: 20px;
          &:after
            position: absolute
            top: -32px
            content: " "
            border-top: 20px solid #088a4b;
            width: 100%
            display: block
