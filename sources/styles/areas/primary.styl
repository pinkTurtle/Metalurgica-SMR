#primary
  .wrapper
    border-top: solid 100px rgba(1, 1, 1, 0.5)
    hr
     height: 20px
     background: $verde-hover
     width: 80%
     margin: -80px auto 0
     border: 0
    
    .info
     width: 80%
     margin: 20px auto 0
     padding: 0
     background: rgba(255, 255, 255, 0.9)
     
     h1
      background: rgba(1, 1, 1, 0.7)
      color: $blanco-fuente
      font-family: $titulos-font
      font-size: 20px
      font-weight: 300
      margin: 0
      padding: 10px 0 0 70px
      height: 40px
    
    .contenido
      font-family: $textos-font
      color: $gris-fuente
      padding: 10px 0 20px 0
      margin: 0 70px
      text-align: justify
      font-size: 15px
      line-height: 20px